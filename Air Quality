
import React from 'react';
import { motion } from 'framer-motion';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Wind, TrendingUp, Info } from 'lucide-react'; // Updated imports for TrendingUp and Info
import { useTheme } from '../theme/ThemeProvider';

// Renamed aqiColors to aqiLevels and added an 'Unknown' category for robustness
const aqiLevels = {
  'Good': { bg: 'bg-green-100 dark:bg-green-900/20', text: 'text-green-800 dark:text-green-200', color: '#22c55e' },
  'Moderate': { bg: 'bg-yellow-100 dark:bg-yellow-900/20', text: 'text-yellow-800 dark:text-yellow-200', color: '#eab308' },
  'Unhealthy for Sensitive Groups': { bg: 'bg-orange-100 dark:bg-orange-900/20', text: 'text-orange-800 dark:text-orange-200', color: '#f97316' },
  'Unhealthy': { bg: 'bg-red-100 dark:bg-red-900/20', text: 'text-red-800 dark:text-red-200', color: '#ef4444' },
  'Very Unhealthy': { bg: 'bg-purple-100 dark:bg-purple-900/20', text: 'text-purple-800 dark:text-purple-200', color: '#a855f7' },
  'Hazardous': { bg: 'bg-gray-900 dark:bg-red-950', text: 'text-white', color: '#1f2937' },
  'Unknown': { bg: 'bg-gray-100 dark:bg-gray-900/20', text: 'text-gray-800 dark:text-gray-200', color: '#6b7280' } // Added fallback category
};

// Helper function to get AQI category descriptions
const getAqiDescription = (category) => {
  switch (category) {
    case 'Good': return 'Air quality is considered satisfactory, and air pollution poses little or no risk.';
    case 'Moderate': return 'Air quality is acceptable; however, for some pollutants there may be a moderate health concern for a very small number of people who are unusually sensitive to air pollution.';
    case 'Unhealthy for Sensitive Groups': return 'Members of sensitive groups may experience health effects. The general public is less likely to be affected.';
    case 'Unhealthy': return 'Everyone may begin to experience health effects; members of sensitive groups may experience more serious health effects.';
    case 'Very Unhealthy': return 'Health warnings of emergency conditions. The entire population is more likely to be affected.';
    case 'Hazardous': return 'Health alert: everyone may experience more serious health effects.';
    default: return 'Air quality data is not available or unknown.';
  }
};

// Sub-component for displaying individual pollutant data
const Pollutant = ({ value, name }) => {
  const { theme } = useTheme(); // Use theme context within the sub-component
  return (
    <div className={`p-3 rounded-lg ${
      theme === 'dark' ? 'bg-gray-800/30' : 'bg-gray-50'
    }`}>
      <div className="text-center">
        <div className="text-slate-50 text-lg font-bold dark:text-white">{value}</div>
        <div className="text-xs text-gray-600 dark:text-gray-400">{name}</div>
      </div>
    </div>
  );
};

export default function AirQuality({ airQualityData }) {
  const { theme } = useTheme();

  if (!airQualityData) {
    return null;
  }

  // Destructure airQualityData as per outline
  const { aqi, category, pm25, pm10, o3, no2 } = airQualityData;
  const colors = aqiLevels[category] || aqiLevels['Unknown']; // Use aqiLevels for color mapping

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.6, delay: 0.5 }}>

      <Card className={`${theme === 'dark' ? 'glass-effect-dark' : 'glass-effect-light'} border-white/20`}>
        <CardHeader>
          <CardTitle className="flex items-center space-x-2 text-white"> {/* Updated text color */}
            <Wind className="w-5 h-5 text-green-500" /> {/* Updated icon color */}
            <span>Air Quality Index</span>
          </CardTitle>
        </CardHeader>
        <CardContent className="space-y-4">
          <div className="flex items-center justify-between">
            <div className="flex items-center space-x-3">
              <div className="text-slate-50 font-bold dark:text-white">
                {aqi} {/* Use destructured aqi */}
              </div>
              <Badge className={`${colors.bg} ${colors.text} font-semibold px-3 py-1`}>
                {category} {/* Use destructured category */}
              </Badge>
            </div>
            <TrendingUp className="w-8 h-8" style={{ color: colors.color }} /> {/* Changed icon from Leaf to TrendingUp */}
          </div>
          
          <div className="text-sm text-gray-400"> {/* New description section */}
            {getAqiDescription(category)}
          </div>

          {/* Updated pollutant display using Pollutant sub-component */}
          <div className="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
            <Pollutant value={pm25} name="PM2.5" />
            <Pollutant value={pm10} name="PM10" />
            <Pollutant value={o3} name="Ozone" /> {/* Renamed O3 to Ozone */}
            <Pollutant value={no2} name="NO₂" />
            {/* Removed SO2 and CO as per the outline */}
          </div>

          {/* New informational text */}
          <div className="text-xs text-gray-500 pt-2 border-t border-white/10">
            <Info className="w-3 h-3 inline mr-1" />
            AQI based on US EPA standards. Values are in µg/m³.
          </div>
          {/* The old health advisory section has been removed as per outline */}
        </CardContent>
      </Card>
    </motion.div>
  );
}
